<div class="container">
    <div class="row">
      <% flash.each do |key, message| %>
        <div class="alert <%= 'alert-success' if key == 'notice' %> <%= 'alert-danger' if key == 'alert' %>" role="alert">
          <%= message %>
        </div>
      <% end %>
    </div>
</div>

<div class="container mt-5">
  <h3>ユーザー一覧</h3>
    <%= link_to '戻る',admin_home_path, class: "text-white btn btn-secondary" %>
    <table class="table mt-3">
      <tr>
        <th>登録写真</th>
        <th>ユーザー</th>
        <th>作成日</th>
        <th colspan="1"></th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td class="col-3"><%= image_tag customer.get_profile_image(80,80), class: "img-fluid rounded-circle" %></td>
          <td class="col-3"><%= customer.name %></td>
          <td class="col-3"><%= customer.created_at.strftime('%Y/%m/%d') %></td>
          <td class="col-3">
            <%= link_to '利用停止', admin_customer_path(customer), method: :delete, data: { confirm: '本当に利用停止にしますか?' },class: "text-white btn btn-sm btn-danger" %>
         </td>
       </tr>
     <% end %>
   </table>
   <%= link_to '戻る',admin_home_path, class: "text-white btn btn-secondary" %>
</div>