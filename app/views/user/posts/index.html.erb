<h1>レビュー投稿一覧</h1>

<%= link_to 'レビュー投稿', new_user_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_posts.each do |user_post| %>
      <tr>
        <td><%= user_post.title %></td>
        <td><%= link_to 'Show', user_post %></td>
        <td><%= link_to '編集', edit_user_post_path(user_post) %></td>
        <td><%= link_to '削除', user_post, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


