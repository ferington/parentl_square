<% if @model == 'customer' %>
    <h3 class="text-primary text-center">該当ユーザー名 "<%= @content %>"</h3>
    <div class="row">
      <div class="col">
        <%= render 'user/customers/index', customers: @records %>
      </div>
    </div>
  </div>
<% elsif @model == 'post' %>
    <h3 class="text-success text-center">該当レビュータイトル "<%= @content %>"</h3>
    <div class="row">
      <div class="col">
        <%= render 'user/posts/index', user_posts: @records %>
      </div>
    </div>
  </div>
<% end %>