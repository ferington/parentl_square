 <%# コメント一覧表示 #%>

<table>
  <tbody>
    <% @user_post.post_comments.each do |post_comment| %>

    <tr>
      <td>
        <%= link_to customer_path(post_comment.customer) do %>
          <%= image_tag post_comment.customer.get_profile_image(100, 100), size: "50x40" %><br>
          <%= post_comment.customer.name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
         <% if post_comment.customer == current_customer %>
           <%= link_to "Destroy", post_post_comment_path(@user_post, post_comment), method: :delete, class: "btn btn-sm btn-danger float-end" %>
         <% end %>
        </td> %>
    </tr>
   <% end %>
  </tbody>
</table>